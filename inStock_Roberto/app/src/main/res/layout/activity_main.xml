<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".mainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true"
        android:id="@+id/buttonLayout">


        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="one"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:id="@+id/zero"
            android:onClick="tag1Click"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="@string/food_item_two"
            android:id="@+id/one"
            android:onClick="tag1Click"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="@string/food_item_three"
            android:id="@+id/two"
            android:onClick="tag1Click"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="@string/food_item_four"
            android:id="@+id/three"
            android:onClick="tag1Click"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="@string/food_item_five"
            android:id="@+id/four"
            android:onClick="tag1Click"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="@string/food_item_six"
            android:id="@+id/five"
            android:onClick="tag1Click"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="Wifi Connect"
            android:id="@+id/wifiConnect"
            android:onClick="clientConnect"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:text="Send '"
            android:id="@+id/wifiSend"
            android:onClick="wifiSend"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@id/buttonLayout"
        android:id="@+id/dateLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="A"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/date_zero" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="B"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/date_one" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="C"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/date_two" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="D"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/date_three" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="E"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/date_four" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:text="F"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:id="@+id/date_five" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/dateLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DAYS"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OLD"
                    android:layout_gravity="clip_horizontal"
                    android:id="@+id/textView2" />
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DAYS"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OLD"
                    android:layout_gravity="clip_horizontal"
                    android:id="@+id/textView4" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DAYS"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OLD"
                    android:layout_gravity="clip_horizontal"
                    android:id="@+id/textView6" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DAYS"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OLD"
                    android:layout_gravity="clip_horizontal"
                    android:id="@+id/textView8" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DAYS"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OLD"
                    android:layout_gravity="clip_horizontal"
                    android:id="@+id/textView10" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DAYS"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginTop="7dp"
                    android:id="@+id/textView11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="OLD"
                    android:layout_gravity="clip_horizontal"
                    android:id="@+id/textView12" />
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>
